type User {
  id: ID! @id
  email: String! @unique
  password: String!
}

type Client {
  id: ID! @id
  user: User @relation(fields: [userId], references: [id])
  userId: ID!
  name: String!
  rate: String
  currency: String!
  themeColor: String
}

type Event {
  id: ID! @id
  user: User @relation(fields: [userId], references: [id])
  userId: ID!
  client: Client @relation(fields: [clientId], references: [id])
  clientId: ID!
  description: String!
  hours: Float!
  date: String!
}
